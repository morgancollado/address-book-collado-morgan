<div id="<%= dom_id person %>">
  <p>
    <strong>Salutation:</strong>
    <%= person.salutation %>
  </p>

  <p>
    <strong>First name:</strong>
    <%= person.first_name %>
  </p>

  <p>
    <strong>Middle name:</strong>
    <%= person.middle_name %>
  </p>

  <p>
    <strong>Last name:</strong>
    <%= person.last_name %>
  </p>

  <p>
    <strong>Ssn:</strong>
    <%= person.ssn %>
  </p>

  <p>
    <strong>Birthdate:</strong>
    <%= person.birthdate %>
  </p>

  <p>
    <strong>Comment:</strong>
    <%= person.comment %>
  </p>

</div>
